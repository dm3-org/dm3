        "build": "yarn build:install &&  yarn build:schema && yarn build:crypto && yarn build:account &&  tsc --declaration && tsc --declaration -p tsconfig.backend.json",
        "test": "jest --coverage"
    },
    "files": [
        "dist",
        "dist.browser"
    ]
