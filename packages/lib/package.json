    "workspaces": {
        "packages": [
            "src/account",
            "src/crypto",
            "src/delivery"
        ]
       
    },
    "dependencies": {   
        "@types/libsodium-wrappers": "^0.7.10",
        "ajv": "^8.11.0",
        "axios": "^0.25.0",
        "ethers": "^5.5.4",
        "googleapis": "^100.0.0",
        "libsodium-wrappers": "^0.7.10",
        "query-string": "^7.1.1",
        "safe-stable-stringify": "^2.4.1",
        "socket.io": "^4.4.1",
        "socket.io-client": "^4.4.1",
        "uuid": "^8.3.2",
        "web3.storage": "^3.5.7",
        "whatwg-encoding": "^2.0.0"
    },
    "devDependencies": {
        "@types/data-urls": "^3.0.1",
        "@types/jest": "^28.1.1",
        "@types/node": "^16.7.13",
        "@types/uuid": "^8.3.4",
        "@types/whatwg-encoding": "^2.0.0",
        "axios-mock-adapter": "^1.21.2",
        "jest": "^28.1.1",
        "ts-jest": "^28.0.4",
        "ts-json-schema-generator": "^0.98.0",
        "typescript": "^4.4.2"
    },
    "scripts": {
        "build:install": "yarn install",
        "build:crypto": "cd ./src/crypto && yarn build && cd ../../",
        "build:account": "cd ./src/account && yarn build && cd ../../",
